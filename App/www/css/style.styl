@import 'nib'
@import 'http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css'
#master-login 
	width 100% 
	height 100% 
	position fixed 
	z-index 9999
	background #fff url(img/logo.jpg) no-repeat center 40% / 50%
	.center 
		width 100%
		height 100% 
		background url(img/loading.gif) no-repeat center 60%
#loading
	display none
	z-index 9
	top 0 
	left 0
	width 100% 
	height 100% 
	position fixed 
	background url(img/loading.gif) no-repeat center center #fff
.logo 
	width 100% 
	height 200px 
	background url(img/logo.jpg) no-repeat center center/ 100%
#menu 
	.ui-panel-position-left
		width 100% !important
#overlay 
	display none
	width 92% 
	height 100% 
	position fixed 
	z-index 9999
	background #fff
	top 0px 
	left 0px 
	#closeOverlay 
		width 100% 
		height 50px 
		text-align right 
		a 
			border none
			float right
			margin-top -10px 
			margin-right -10px
	#overlayLoad 
		width 100% 
	#userInfo 
		width 100%
		h3 
			text-align center 
			margin 0 auto
		input[type="text"], input[type="password"]
			width 95%
			outline none 
			border-radius 5px
			padding 5px 
			background #FFF
			border 1px solid #DDD
			color #333
			text-shadow 0px 1px 0px #F3F3F3
			box-shadow 0px 1px 3px rgba(0, 0, 0, 0.2) inset
		input[type="submit"]
			width 100%
			text-align center 
			background-color #F6F6F6
			border-radius 5px
			border 1px solid #DDD
			color #333
			padding 10px 0px 
			margin-top 20px 
			font-weight 800
			text-shadow 0px 1px 0px #F3F3F3
			box-shadow 0px 1px 3px rgba(0, 0, 0, 0.2)
		label 
			margin 10px 0px 0px 5px
			
#newUser
	border none 
	background #E9E9E9